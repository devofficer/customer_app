{
  "name": "defie-customer-app",
  "version": "0.0.1",
  "description": "A Customer App built with Lit",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "npm-run-all clean build --parallel \"build:watch -- --preserveWatchOutput\" bundle:watch css:watch serve:watch",
    "clean": "rimraf ./dist",
    "clean:prod": "rimraf \"./dist/!(index|main.bundle)*\"",
    "build": "tsc",
    "build:watch": "npm run build -- --watch",
    "bundle": "rollup -c",
    "bundle:prod": "rollup -c rollup.config.prod.js",
    "bundle:watch": "npm run bundle -- --watch",
    "css": "postcss ./src/app/main.css --use postcss-import --output ./dist/app/public/main.bundle.css",
    "css:prod": "postcss ./src/app/main.css --use postcss-import cssnano --no-map --output ./dist/app/public/main.bundle.css",
    "css:watch": "npm run css -- --watch",
    "serve": "web-dev-server --open",
    "serve:watch": "npm run serve -- --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "vercel": "npm-run-all clean build bundle:prod css:prod clean:prod"
  },
  "author": "Alex Alampour",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/axios": "^0.14.0",
    "@web/dev-server": "^0.1.30",
    "@web/rollup-plugin-copy": "^0.3.0",
    "cssnano": "^5.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.25.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.8",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.69.1",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@lit-labs/router": "^0.1.1",
    "@material/web": "^1.0.0-pre.1",
    "axios": "^1.1.3",
    "@koa/router": "^10.0.0",
    "@lit-labs/ssr": "^3.0.1",
    "@webcomponents/template-shadowroot": "^0.1.0",
    "koa": "^2.13.1",
    "koa-node-resolve": "*",
    "koa-static": "^5.0.0",
    "lit": "^2.6.1"
  }
}
